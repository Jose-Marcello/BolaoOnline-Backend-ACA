@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ApostasApp.Core.Presentation.ViewModels.LoginViewModel

@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>


<div class="login-container">
    <h2>Login do Usuário</h2>
    <div class="login-form-wrapper">
        <form class="login-form" method="post" action="/Account/Login">
                        
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            }
            
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
            {
                <div class="error-summary">
                    <ul>
                        @foreach (var error in ViewData.ModelState[""].Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <div class="form-group">
                <label for="email" class="login-title">Email</label>
                <input type="email" id="email" name="Email" required>
            </div>

            <div class="form-group">
                <label for="password" class="login-title">Senha</label>
                <input type="password" id="password" name="Password" required>
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i id="togglePassword" class="fa fa-eye"></i>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="rememberMe" class="login-title">
                    <input type="checkbox" id="rememberMe" name="RememberMe"> Lembrar-me
                </label>
            </div>
            <button class="login-links" type="submit">Login</button>
            <a href="/Account/EsqueciSenha">Esqueci minha senha</a>
            <a href="/Account/Register" class="register-button">Registre-se</a>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.EmailNaoConfirmado))
        {
            <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.EmailNaoConfirmado
                @if (!string.IsNullOrEmpty(ViewBag.EmailParaReenvio))
                {
                    <form asp-controller="Account" asp-action="ResendEmailConfirmation" method="post" class="mt-2">
                        <input type="hidden" name="email" value="@ViewBag.EmailParaReenvio" />
                        <button type="submit" class="btn btn-link p-0">Reenviar e-mail de confirmação</button>
                        @Html.AntiForgeryToken()
                    </form>
                }
            </div>
        }
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function (e) {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);

        if (this.classList.contains('fa-eye-slash')) {
            this.classList.remove('fa-eye-slash');
            this.classList.add('fa-eye'); // Adiciona a classe fa-eye para exibir o olho aberto
        } else {
            this.classList.add('fa-eye-slash');
            this.classList.remove('fa-eye'); // Remove a classe fa-eye para exibir o olho fechado
        }
    });
</script>