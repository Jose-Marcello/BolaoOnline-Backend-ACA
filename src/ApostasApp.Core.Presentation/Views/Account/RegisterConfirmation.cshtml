@{
    ViewData["Title"] = "Confirmação de Registro";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>

<div class="login-container">
    <h2>Confirmação de Registro</h2>

    <div class="alert alert-success">
        <p><i class="fas fa-check-circle fa-2x align-middle mr-2"></i> Seu registro foi realizado com sucesso!</p>
        <p>Você pode agora fazer login na sua conta.</p>
    </div>

    <div class="mt-3">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-block">Ir para o Login</a>
    </div>
</div>