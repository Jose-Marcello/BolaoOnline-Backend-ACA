@model ApostasApp.Core.Presentation.ViewModels.EsqueciSenhaViewModel
@{
    ViewData["Title"] = "Esqueci minha senha";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>

<div class="login-container">
    <h2>Esqueci minha senha</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }
    else
    {
        <form method="post" asp-controller="Account" asp-action="EsqueciSenha">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <br />

            <button type="submit" class="btn btn-primary btn-block">Enviar</button>
        </form>
    }

    <div class="mt-3">
        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-block">Voltar para o Login</a>
    </div>
</div>